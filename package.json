{
  "name": "hikma-ui",
  "version": "0.0.0-development",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "homepage": "https://github.com/tawhidjony/hikma-datepicker",
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./dist/index.css": "./dist/index.css"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "npx @tailwindcss/cli -i src/index.css -o dist/index.css --watch",
    "build:css:prod": "npx @tailwindcss/cli -i src/index.css -o dist/index.css --minify",
    "husky": "husky",
    "semantic-release": "semantic-release",
    "build:prod": "npm run clean && npm run build && npm run build:css:prod",
    "test": "echo 'No tests specified'"
  },
  "author": "tawhidjony",
  "license": "MIT",
  "description": "Hikma UI is a collection of components for building modern, responsive web applications.",
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@tailwindcss/cli": "^4.0.3",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.1",
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0",
    "react-hook-form": "^7.54.2",
    "rimraf": "^6.0.1",
    "tailwind-merge": "^3.0.1",
    "tailwindcss": "^4.0.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "husky": "^9.1.7",
    "semantic-release": "^24.2.1",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/tawhidjony/hikma-datepicker/issues"
  },
  "keywords": [
    "datepicker",
    "date and time",
    "tailwindcss date picker",
    "time picker",
    "tailwindcss time picker"
  ]
}
